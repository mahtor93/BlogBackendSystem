// ======================
// Prisma config
// ======================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================
// Core: Tenant & Users
// ======================
model Tenant {
  id        String   @id @default(uuid())
  name      String
  plan      String   @default("FREE")
  createdAt DateTime @default(now())

  tenantUsers TenantUser[]
  blogs       Blog[]
  domains     Domain[]
  posts       Post[]
  tags        Tag[]
  roles       UserRole[]

  @@map("tenants")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  name     String
  bio      String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  avatarId String? @unique
  avatar   Media?  @relation("UserAvatar", fields: [avatarId], references: [id])

  tenants TenantUser[]
  posts   Post[]
  tags    Tag[]

  @@map("users")
}

model UserRole {
  id       String @id @default(uuid())
  name     String // OWNER | ADMIN | EDITOR | AUTHOR | BLANK

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id])

  users TenantUser[]

  @@unique([tenantId, name])
}

model TenantUser {
  id String @id @default(uuid())

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  roleId String
  role   UserRole @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())

  @@unique([tenantId, userId])
  @@index([tenantId])
  @@index([userId])
}

// ======================
// Blogs & Domains
// ======================
model Blog {
  id          String  @id @default(uuid())
  name        String
  slug        String
  description String? @db.Text

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts   Post[]
  tags    Tag[]
  domains Domain[]

  @@unique([tenantId, slug])
  @@index([tenantId])
  @@map("blogs")
}

model Domain {
  id     String @id @default(uuid())
  domain String @unique

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([blogId])
  @@map("domains")
}

// ======================
// Posts
// ======================
model Post {
  id      String @id @default(uuid())
  title   String
  content String @db.Text

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  status       PostStatus @default(DRAFT)
  publishedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  media Media[]
  tags  PostTag[]

  @@index([blogId, status])
  @@index([authorId, status])
  @@index([tenantId, status])
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  PRIVATE
}

// ======================
// Tags
// ======================
model Tag {
  id   String @id @default(uuid())
  name String

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId String
  blog   Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  posts PostTag[]

  createdAt DateTime @default(now())

  @@unique([blogId, name])
  @@index([tenantId])
  @@index([blogId])
}

model PostTag {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId])
}

// ======================
// Media
// ======================
model Media {
  id       String    @id @default(uuid())
  type     MediaType
  url      String
  position Int?
  isHeader Boolean   @default(false)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  userAvatar User? @relation("UserAvatar")

  createdAt DateTime @default(now())

  @@index([postId])
}

enum MediaType {
  IMAGE
  VIDEO
  GIF
}
