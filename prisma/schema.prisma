generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  plan      String   @default("FREE")
  createdAt DateTime @default(now())

  users   User[]
  domains Domain[]
  posts   Post[]
  tags    Tag[]

  @@map("tenants")
}

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String
  bio       String?  @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  avatarId String?  @unique @default(uuid())
  avatar   Media?   @relation("UserAvatar", fields: [avatarId], references: [id])
  
  posts Post[]
  tags  Tag[]


  @@index([tenantId])
  @@map("users")
}

model Domain {
  id       String @id @default(uuid())
  domain   String @unique

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId   String
  blog     Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)


  @@index([tenantId])
  @@index([blogId])
  @@map("domains")
}

model Blog {
  id          String   @id @default(uuid())
  name        String
  slug        String
  description String?  @db.Text

  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  posts       Post[]
  tags        Tag[]
  domains     Domain[]

  @@unique([tenantId, slug])
  @@index([tenantId])
  @@map("blogs")
}

model Post {
  id String @id @default(uuid())
  title String
  content String @db.Text

  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId   String
  blog     Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  publishedAt DateTime?

  status PostStatus @default(DRAFT)

  authorId String
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  media Media[]
  tags  PostTag[]
  

  @@index([blogId, status])
  @@index([authorId, status])
  @@index([tenantId, status])

}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  PRIVATE
}

model PostTag {
  postId String
  tagId  String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
  @@index([tagId])
}

model Tag {
  id        String   @id @default(uuid())
  name      String

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  blogId    String
  blog      Blog   @relation(fields: [blogId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  posts     PostTag[]

  createdAt DateTime @default(now())

  @@unique([blogId, name])
  @@index([tenantId])
  @@index([blogId])
}

model Media {
  id   String @id @default(uuid())
  type MediaType
  url  String
  position Int? //orden de la galeria
  isHeader Boolean @default(false)

  postId String
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  userAvatar User?  @relation("UserAvatar")

  createdAt DateTime @default(now())
  @@index([postId])
}

enum MediaType {
  IMAGE
  VIDEO
  GIF
}